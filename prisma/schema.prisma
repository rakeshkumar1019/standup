generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique

  @@index(userId)
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  profile Profile?
}


model Orgnazation {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  project Project? @relation(fields: [projectId], references: [id])
}

model Project {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  org     Orgnazation @relation(fields: [orgId], references: [id])
  orgId   Int
}